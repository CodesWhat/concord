# ===========================================
# Concord Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.
# Variables with defaults are optional in development.

# --- Required ---
DATABASE_URL=postgres://concord:concord@localhost:5432/concord
REDIS_URL=redis://localhost:6379

# --- Auth ---
# Required in production. In development, a default dev secret is used.
AUTH_SECRET=change-me-in-production
# Base URL for the API server (used by Better Auth)
# AUTH_BASE_URL=http://localhost:3000
# Comma-separated list of trusted origins for CORS/auth
# TRUSTED_ORIGINS=http://localhost:5173

# --- Server ---
# PORT=3000
# HOST=0.0.0.0
# CORS_ORIGIN=http://localhost:5173

# --- LiveKit (voice/video) ---
# LIVEKIT_URL=ws://localhost:7880
# LIVEKIT_API_KEY=devkey
# LIVEKIT_API_SECRET=devsecret

# --- S3 (file uploads) ---
# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=concord
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin

# --- Web Push (VAPID) ---
# VAPID_SUBJECT=mailto:admin@concord.chat
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
