{
  "name": "@concord/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "test": "tsx --test ./test/**/*.test.ts",
    "test:coverage": "c8 --reporter=text --reporter=lcov --reporter=html pnpm test",
    "seed": "tsx src/seed.ts",
    "db:generate": "NODE_OPTIONS='--import ./bigint-patch.mjs --import tsx' drizzle-kit generate",
    "db:migrate": "NODE_OPTIONS='--import ./bigint-patch.mjs --import tsx' drizzle-kit migrate",
    "db:studio": "NODE_OPTIONS='--import ./bigint-patch.mjs --import tsx' drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.994.0",
    "@aws-sdk/s3-request-presigner": "^3.994.0",
    "@concord/shared": "workspace:*",
    "@fastify/cors": "^11.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@node-rs/argon2": "^2.0.2",
    "@paralleldrive/cuid2": "^3.3.0",
    "better-auth": "^1.4.19",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.2.1",
    "ioredis": "^5.9.3",
    "livekit-server-sdk": "^2.15.0",
    "nodemailer": "^8.0.1",
    "postgres": "^3.4.8",
    "web-push": "^3.6.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.10",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.9",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
